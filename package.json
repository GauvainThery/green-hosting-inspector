{
  "name": "green-hosting-inspector",
  "displayName": "Green Hosting Inspector",
  "description": "Check if URLs in your code are hosted on green, renewable-energy powered infrastructure. Powered by the Green Web Foundation.",
  "version": "2.1.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GauvainThery/green-hosting-inspector"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:json",
    "onLanguage:xml",
    "onLanguage:markdown",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:scss",
    "onLanguage:yaml",
    "onLanguage:dockerfile",
    "onLanguage:shellscript",
    "onLanguage:r",
    "onLanguage:plaintext"
  ],
  "keywords": [
    "green hosting",
    "sustainability",
    "environment",
    "urls",
    "hosting",
    "code analysis",
    "visual studio code",
    "vscode extension"
  ],
  "homepage": "https://github.com/GauvainThery/green-hosting-inspector",
  "publisher": "GauvainThery",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "greenHostingInspector.showMetrics",
        "title": "Green Hosting Inspector: Repository Metrics"
      },
      {
        "command": "greenHostingInspector.clearCache",
        "title": "Green Hosting Inspector: Clear Cache"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  }
}
